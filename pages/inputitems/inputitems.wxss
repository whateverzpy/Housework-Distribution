.intro {
	display: flex;
	height: 160rpx;
	align-items: center;
	margin-top: -40rpx;
	background: #fff;
	border-radius: var(--border-radius);
	padding: var(--spacing-sm);
	box-shadow: var(--shadow);
}

.intro image {
	height: 160rpx;
	flex: 1;
}

.intro .content {
	font-size: 60rpx;
	font-weight: bold;
	flex: 1.7;
	color: var(--text-primary);
}

.button {
	margin: var(--spacing-md);
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: var(--spacing-md);
}
